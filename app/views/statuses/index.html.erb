<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Sold</th>
      <th>Date sold</th>
      <th>Date listed</th>
      <th>View count</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.sold %></td>
        <td><%= status.date_sold %></td>
        <td><%= status.date_listed %></td>
        <td><%= status.view_count %></td>
        <td><%= status.user %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
